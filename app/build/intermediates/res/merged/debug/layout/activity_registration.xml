<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context="com.example.mayank.medishare.Registration">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="     Register to donate"
            android:textColor="@android:color/holo_red_light"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView6">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/uploadedimage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/common_google_signin_btn_icon_light_normal_background" />

                <EditText
                    android:id="@+id/organisation_name"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                    android:layout_height="78dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_weight="0"
                    android:ems="10"
                    android:hint=" Name "
                    android:inputType="textPersonName"
                    android:textSize="30sp"
                    android:textColorHint="#fff"/>








                <EditText
                    android:textColorHint="#fff"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_row="2"
                    android:ems="10"
                    android:hint=" Phone no."
                    android:inputType="phone"
                    android:textSize="30sp" />


                <EditText
                    android:textColorHint="#fff"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_row="3"
                    android:ems="10"
                    android:hint=" Email Id"
                    android:inputType="textEmailAddress"
                    android:textSize="30sp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"/>


                <EditText
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:id="@+id/password"
                    android:textColorHint="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_row="4"
                    android:ems="10"
                    android:hint=" Password"
                    android:inputType="textPassword"
                    android:textSize="30sp" />



                <EditText
                    android:id="@+id/location"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:textColorHint="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_row="5"
                    android:ems="10"
                    android:hint=" Your Location"
                    android:inputType="textPostalAddress"
                    android:textSize="25sp"
                    android:padding="10sp"/>



                <Button
                    android:id="@+id/submit"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="30dp"

                    android:layout_row="6"
                    android:text="Procced"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:textStyle="bold" />



            </GridLayout>
        </ScrollView>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
